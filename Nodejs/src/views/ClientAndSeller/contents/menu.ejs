<div class="container my-2">
  <div class="row">
    <h1>Các sản phẩm tiêu biểu</h1>
  </div>
  <div class="row">
    <% if (data.productData.length == 0) {%>
    <h1>Hiện tại Chưa có sản phẩm nào được đăng!</h1>
    <%}%>
    <% for (let i = 0; i < data.productData.length; i++) {%>
    <div class="card col-lg-4 col-md-6 py-2 h-100 item">
      <%if(session.user.permission=="client"){%>
      <a href="<%baseURL%>/product/<%- data.productData[i].id %>"><img src="<%- data.productData[i].image1 %>" alt="Polo picture" class="card-img-top" style="height: 200px;"></a>
      <%}else{%>
      <a href="<%baseURL%>/seller/product/<%- data.productData[i].id %>"><img src="<%- data.productData[i].image1 %>" alt="Polo picture" class="card-img-top" style="height: 200px;"></a>
      <%}%>
      <p class="text-center"><%- data.productData[i].name %></p>
      <p class="text-center">Giá: <%- data.productData[i].price %> VNĐ</p>
    </div>
    <%}%>
  </div>
  <div class="row justify-content-center">
    <ul class="pagination">
      
    <% if(pNum!=null) { %>
    <% if(category==null) {%>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/page/<%-pNum-1%>">Previous</a></li>
    <li class="page-item active"><a class="page-link" href="#"><%-pNum%></a></li>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/page/<%-pNum-(-1)%>">Next</a></li>
    <%}else{%>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/category/<%-category%>/page/<%-pNum-1%>">Previous</a></li>
    <li class="page-item active"><a class="page-link" href="#"><%-pNum%></a></li>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/category/<%-category%>/page/<%-pNum-(-1)%>">Next</a></li>
    <%}%>
    <%}else{%>
    <% if(category==null) {%>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/page/0">Previous</a></li>
    <li class="page-item active"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/page/2">Next</a></li>
    <%}else{%>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/category/<%-category%>/page/0">Previous</a></li>
    <li class="page-item active"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="<%baseURL%>/category/<%-category%>/page/2">Next</a></li>
    <%}%>
    <%}%>
    </ul>
  </div>
</div>